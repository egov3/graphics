{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "rootDir": "./src",
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
